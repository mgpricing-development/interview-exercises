{
  "family": "interview-exercise",
  "cpu": "2048",
  "memory": "4096",
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "arn:aws:iam::AWS_ACCOUNT_ID:role/interview-exercise-ecs-execution-role",
  "taskRoleArn": "arn:aws:iam::AWS_ACCOUNT_ID:role/interview-exercise-task-role",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "CONTAINER_NAME",
      "essential": true,
      "image": "",
      "portMappings": [
        {
          "containerPort": 3000
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "interview-exercise-log-group",
          "awslogs-region": "eu-west-1",
          "awslogs-stream-prefix": "interview-exercise"
        }
      },
      "environment": [
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "AWS_REGION",
          "value": "eu-west-1"
        },
        {
          "name": "CONFIG_AUTH_SAME_SITE",
          "value": "strict"
        },
        {
          "name": "CONFIG_AUTH_SECURE",
          "value": "true"
        },
        {
          "name": "IS_AWS",
          "value": "true"
        },
        {
          "name": "LOG_JSON",
          "value": "true"
        },
        {
          "name": "VERSION",
          "value": "COMMIT_REF"
        },
        {
          "name": "APP_NAME",
          "value": "CONTAINER_NAME"
        },
        {
          "name": "CLUSTER_MODE",
          "value": "true"
        }
      ],
      "secrets": [
        {
          "name": "MONGODB_URL",
          "valueFrom": "arn:aws:ssm:eu-west-1:AWS_ACCOUNT_ID:parameter/dev/todo/mongodbUrl"
        },
        {
          "name": "BASIC_AUTH_USERNAME",
          "valueFrom": "arn:aws:ssm:us-east-1:AWS_ACCOUNT_ID:parameter/interviewExercise/basicAuthUsername"
        },
        {
          "name": "BASIC_AUTH_PASSWORD",
          "valueFrom": "arn:aws:ssm:eu-west-1:AWS_ACCOUNT_ID:parameter/interviewExercise/basicAuthPassword"
        }
      ]
    }
  ]
}
